{
  "global": {
    "ask_for_confirmation_before_quitting": true,
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true,
    "show_profile_name_in_menu_bar": false,
    "unsafe_ui": false
  },
  "profiles": [
    {
      "name": "Default profile",
      "parameters": {
        "delay_milliseconds_before_open_device": 1000
      },
      "selected": true,
      "simple_modifications": [],
      "virtual_hid_keyboard": {
        "country_code": 0,
        "indicate_sticky_modifier_keys_state": true,
        "mouse_key_xy_scale": 100
      },
      "complex_modifications": {
        "parameters": {
          "basic.simultaneous_threshold_milliseconds": 50,
          "basic.to_delayed_action_delay_milliseconds": 500,
          "basic.to_if_alone_timeout_milliseconds": 1000,
          "basic.to_if_held_down_threshold_milliseconds": 500,
          "mouse_motion_to_scroll.speed": 100
        },
        "rules": [
          {
            "description": "Caps Lock → Hyper Key (Cmd+Ctrl+Opt+Shift), Escape when alone",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": {
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "hyper_key_pressed",
                      "value": 1
                    }
                  },
                  {
                    "key_code": "left_command",
                    "modifiers": ["left_control", "left_option", "left_shift"]
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "hyper_key_pressed",
                      "value": 0
                    }
                  }
                ],
                "to_if_alone": [
                  {
                    "key_code": "escape"
                  }
                ],
                "parameters": {
                  "basic.to_if_alone_timeout_milliseconds": 200
                }
              }
            ]
          },
          {
            "description": "Hyper Key + Application Shortcuts",
            "manipulators": [
              {
                "description": "Hyper + T → Launch Ghostty",
                "type": "basic",
                "from": {
                  "key_code": "t",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "open -a 'Ghostty'"
                  }
                ]
              },
              {
                "description": "Hyper + C → Launch Chrome",
                "type": "basic",
                "from": {
                  "key_code": "c",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "open -a 'Google Chrome'"
                  }
                ]
              },
              {
                "description": "Hyper + V → Launch VS Code",
                "type": "basic",
                "from": {
                  "key_code": "v",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "open -a 'Visual Studio Code'"
                  }
                ]
              },
              {
                "description": "Hyper + S → Launch Slack",
                "type": "basic",
                "from": {
                  "key_code": "s",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "open -a 'Slack'"
                  }
                ]
              },
              {
                "description": "Hyper + F → Launch Finder",
                "type": "basic",
                "from": {
                  "key_code": "f",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "open -a 'Finder'"
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key + System Controls",
            "manipulators": [
              {
                "description": "Hyper + L → Lock Screen",
                "type": "basic",
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "/System/Library/CoreServices/Menu\\ Extras/User.menu/Contents/Resources/CGSession -suspend"
                  }
                ]
              },
              {
                "description": "Hyper + Backspace → Sleep",
                "type": "basic",
                "from": {
                  "key_code": "delete_or_backspace",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "osascript -e 'tell application \"System Events\" to sleep'"
                  }
                ]
              },
              {
                "description": "Hyper + R → Reload AeroSpace",
                "type": "basic",
                "from": {
                  "key_code": "r",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "aerospace reload-config"
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key + Development Shortcuts",
            "manipulators": [
              {
                "description": "Hyper + G → Quick Git Status",
                "type": "basic",
                "from": {
                  "key_code": "g",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "osascript -e 'tell application \"Ghostty\" to activate' -e 'tell application \"System Events\" to keystroke \"lazygit\" & return'"
                  }
                ]
              },
              {
                "description": "Hyper + P → Project Sessionizer",
                "type": "basic",
                "from": {
                  "key_code": "p",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "osascript -e 'tell application \"Ghostty\" to activate' -e 'tell application \"System Events\" to keystroke \"tmux-sessionizer\" & return'"
                  }
                ]
              },
              {
                "description": "Hyper + A → Claude AI Session",
                "type": "basic",
                "from": {
                  "key_code": "a",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "shell_command": "osascript -e 'tell application \"Ghostty\" to activate' -e 'tell application \"System Events\" to keystroke \"claude --project .\" & return'"
                  }
                ]
              }
            ]
          },
          {
            "description": "Enhanced Arrow Keys with Hyper",
            "manipulators": [
              {
                "description": "Hyper + H → Left Arrow",
                "type": "basic",
                "from": {
                  "key_code": "h",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow"
                  }
                ]
              },
              {
                "description": "Hyper + J → Down Arrow",
                "type": "basic",
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "key_code": "down_arrow"
                  }
                ]
              },
              {
                "description": "Hyper + K → Up Arrow",
                "type": "basic",
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "key_code": "up_arrow"
                  }
                ]
              },
              {
                "description": "Hyper + L → Right Arrow",
                "type": "basic",
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "mandatory": ["command", "control", "option", "shift"]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow"
                  }
                ]
              }
            ]
          }
        ]
      },
      "devices": [
        {
          "disable_built_in_keyboard_if_exists": false,
          "fn_function_keys": [],
          "identifiers": {
            "is_keyboard": true,
            "is_pointing_device": false,
            "product_id": 0,
            "vendor_id": 0
          },
          "ignore": false,
          "manipulate_caps_lock_led": true,
          "simple_modifications": []
        }
      ],
      "fn_function_keys": [
        {
          "from": {
            "key_code": "f1"
          },
          "to": [
            {
              "consumer_key_code": "display_brightness_decrement"
            }
          ]
        },
        {
          "from": {
            "key_code": "f2"
          },
          "to": [
            {
              "consumer_key_code": "display_brightness_increment"
            }
          ]
        },
        {
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "apple_vendor_keyboard_key_code": "mission_control"
            }
          ]
        },
        {
          "from": {
            "key_code": "f4"
          },
          "to": [
            {
              "apple_vendor_keyboard_key_code": "spotlight"
            }
          ]
        },
        {
          "from": {
            "key_code": "f5"
          },
          "to": [
            {
              "consumer_key_code": "dictation"
            }
          ]
        },
        {
          "from": {
            "key_code": "f6"
          },
          "to": [
            {
              "key_code": "f6"
            }
          ]
        },
        {
          "from": {
            "key_code": "f7"
          },
          "to": [
            {
              "consumer_key_code": "rewind"
            }
          ]
        },
        {
          "from": {
            "key_code": "f8"
          },
          "to": [
            {
              "consumer_key_code": "play_or_pause"
            }
          ]
        },
        {
          "from": {
            "key_code": "f9"
          },
          "to": [
            {
              "consumer_key_code": "fast_forward"
            }
          ]
        },
        {
          "from": {
            "key_code": "f10"
          },
          "to": [
            {
              "consumer_key_code": "mute"
            }
          ]
        },
        {
          "from": {
            "key_code": "f11"
          },
          "to": [
            {
              "consumer_key_code": "volume_decrement"
            }
          ]
        },
        {
          "from": {
            "key_code": "f12"
          },
          "to": [
            {
              "consumer_key_code": "volume_increment"
            }
          ]
        }
      ]
    }
  ]
}