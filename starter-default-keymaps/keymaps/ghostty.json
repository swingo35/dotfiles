    },
    {
      "key": "Cmd+Enter / Cmd+Ctrl+F",
      "description": "Toggle fullscreen"
    },
    {
      "key": "Cmd+Q",
      "description": "Quit application"
    },
    {
      "key": "Cmd+T",
      "description": "New tab"
