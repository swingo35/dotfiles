{
  "source": "https://ghostty.org/docs/config/keybindings",
  "keymaps": [
    {
      "key": "Cmd+N",
      "description": "New window"
    },
    {
      "key": "Cmd+Shift+W",
      "description": "Close window"
    },
    {
      "key": "Cmd+Shift+Option+W",
